# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files to be normalized
*.py text
*.md text
*.txt text
*.ino text
*.h text
*.cpp text
*.c text
*.json text
*.yml text
*.yaml text
*.html text
*.css text
*.js text

# Declare scripts to use LF
*.sh text eol=lf
run_ai_cam.sh text eol=lf

# Declare Windows batch files to use CRLF
*.bat text eol=crlf
run_ai_cam.bat text eol=crlf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.weights binary
